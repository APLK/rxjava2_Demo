<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingBottom="@dimen/width_8dp"
              android:paddingLeft="@dimen/width_12dp"
              android:paddingRight="@dimen/width_12dp"
              android:paddingTop="@dimen/width_8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/width_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="手机号:null"
            android:textColor="@color/common_h1"/>

        <TextView
            android:id="@+id/tv_profit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/width_3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="分润贡献:0.00"
            android:textColor="@color/common_h2"/>
    </LinearLayout>
</LinearLayout>