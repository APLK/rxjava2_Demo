<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/MatchMatch"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/common_gray_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/height_12dp"
            android:layout_marginTop="@dimen/height_40dp"
            android:background="@drawable/selector_btn_login"
            android:gravity="center"
            android:text="提交计划"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_18sp"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lv_list"
            style="@style/MatchMatch"
            android:layout_above="@+id/bt_submit"
            android:cacheColorHint="#00000000"
            android:dividerHeight="10dp"
            android:listSelector="@color/common_touch_bg"
            android:scrollbars="none">
        </ListView>
    </RelativeLayout>
</LinearLayout>
