<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/MatchMatch"
        android:layout_marginLeft="@dimen/width_20dp"
        android:layout_marginRight="@dimen/width_20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_45dp"
            android:layout_marginTop="@dimen/height_40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/WrapMatch"
                android:gravity="center_vertical"
                android:text="旧密码"
                android:textColor="@color/gray_323232"
                android:textSize="15sp"
                />

            <com.szinternet.crm.view.ClearEditText
                android:id="@+id/et_old_password"
                style="@style/AutoMatch"
                android:layout_marginLeft="@dimen/height_15dp"
                android:background="@null"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/gray_676767"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"/>


            <ImageView
                android:id="@+id/iv_delete_old_pwd"
                android:layout_width="@dimen/width_30dp"
                android:layout_height="@dimen/width_30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_delete"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/grey_e0e0e0"/>


        <View
            style="@style/MatchOne"
            android:background="@color/grey_e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/WrapMatch"
                android:gravity="center_vertical"
                android:text="输入密码"
                android:textColor="@color/gray_323232"
                android:textSize="15sp"

                />

            <com.szinternet.crm.view.ClearEditText
                android:id="@+id/et_password"
                style="@style/AutoMatch"
                android:layout_marginLeft="@dimen/height_15dp"
                android:background="@null"
                android:hint="请输入新密码(密码长度15位以下)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/gray_676767"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_delete_pwd"
                android:layout_width="@dimen/width_30dp"
                android:layout_height="@dimen/width_30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_delete"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/grey_e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/WrapMatch"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="@color/gray_323232"
                android:textSize="15sp"

                />

            <com.szinternet.crm.view.ClearEditText
                android:id="@+id/et_sure_password"
                style="@style/AutoMatch"
                android:layout_marginLeft="@dimen/height_15dp"
                android:background="@null"
                android:hint="请确认密码(密码长度15位以下)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/gray_676767"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_delete_sure_pwd"
                android:layout_width="@dimen/width_30dp"
                android:layout_height="@dimen/width_30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_delete"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/grey_e0e0e0"/>

        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_45dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/height_40dp"
            android:background="@drawable/selector_btn_login"
            android:gravity="center"
            android:text="@string/update_pwd"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>