<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              style="@style/MatchMatch"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/width_10dp"
        android:layout_marginRight="@dimen/width_10dp"
        android:layout_marginTop="@dimen/height_12dp">
        <com.szinternet.crm.view.SegmentTabLayout
            android:id="@+id/tl_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_35dp"
            android:layout_gravity="center_horizontal"
            tl:tl_bar_color="#ffffff"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_corner_radius="4dp"
            tl:tl_tab_padding="10dp"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        style="@style/MatchMatch"
        android:layout_marginTop="@dimen/height_12dp"/>
</LinearLayout>