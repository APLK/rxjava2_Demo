<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchWrap"
              android:orientation="vertical">

    <TextView
        style="@style/WrapWrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/height_30dp"
        android:layout_marginTop="@dimen/height_30dp"
        android:drawablePadding="@dimen/height_25dp"
        android:drawableTop="@mipmap/icon_add_card"
        android:text="请添加信用卡进行支付"/>

    <TextView
        android:id="@+id/bt_add_card"
        style="@style/WrapWrap"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_10dp"
        android:background="@drawable/shape_add_bg"
        android:gravity="center"
        android:text="+添加信用卡"
        android:textColor="@color/toolbar"
        android:textSize="@dimen/textsize_18sp"
        android:textStyle="bold"/>
</LinearLayout>