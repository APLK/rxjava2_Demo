<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/MatchMatch"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/common_gray_bg"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>


    <com.szinternet.crm.view.ReboundScrollView
        style="@style/MatchMatch"
        android:layout_below="@+id/ivHeader">

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/height_20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/updatepwd_view"
                style="@style/MatchWrap"
                android:background="@drawable/selector_option_item"
                android:clickable="true"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="修改密码"
                    android:textColor="@color/common_h1"
                    android:textSize="@dimen/textsize_18sp"/>

                <TextView
                    android:id="@+id/tv_updatepwd"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/width_10dp"
                    android:drawableRight="@mipmap/icon_enter"
                    android:textColor="@color/common_h2"/>
            </RelativeLayout>

            <View
                style="@style/MatchOne"
                android:background="@color/common_divider_narrow"/>

            <RelativeLayout
                android:id="@+id/about_view"
                style="@style/MatchWrap"
                android:background="@drawable/selector_option_item"
                android:clickable="true"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textColor="@color/common_h1"
                    android:textSize="@dimen/textsize_18sp"/>

                <TextView
                    android:id="@+id/tv_about"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/width_10dp"
                    android:drawableRight="@mipmap/icon_enter"
                    android:textColor="@color/common_h2"/>
            </RelativeLayout>

            <Button
                android:id="@+id/logout"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/width_15dp"
                android:layout_marginRight="@dimen/width_15dp"
                android:layout_marginTop="@dimen/height_80dp"
                android:background="@drawable/selector_option_item"
                android:text="退出登录"
                android:textColor="@drawable/selector_logout_text_color"
                android:textSize="@dimen/textsize_15sp"/>
        </LinearLayout>
    </com.szinternet.crm.view.ReboundScrollView>
</LinearLayout>