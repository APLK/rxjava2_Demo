<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lLayout_bg"
              style="@style/MatchWrap"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical">

    <TextView
        android:background="@drawable/shape_title_normal"
        android:id="@+id/txt_title"
        style="@style/MatchWrap"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/shape_content_normal"
        android:id="@+id/txt_msg"
        style="@style/MatchWrap"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        style="@style/MatchOne"
        android:background="@color/alertdialog_line"/>

    <LinearLayout
        android:background="@drawable/shape_single_normal"
        style="@style/MatchWrap"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/shape_sure_normal"
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/width_45dp"
            android:background="@color/alertdialog_line"/>

        <Button
            android:background="@drawable/shape_cancle_normal"
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>