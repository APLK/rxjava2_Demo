<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/MatchWrap"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/dark_red"
                android:padding="@dimen/height_10dp">

    <ImageView
        android:id="@+id/icon_bank"
        style="@style/WrapWrap"
        android:src="@mipmap/icon_jianshe"/>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/width_12dp"
        android:layout_toRightOf="@+id/icon_bank"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/MatchWrap"
            android:text="null"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16sp"/>

        <TextView
            android:id="@+id/tv_bank_type"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/width_3dp"
            android:text="null"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_bank_code"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/width_3dp"
            android:text="**** **** **** null"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20sp"/>
    </LinearLayout>
</RelativeLayout>