<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/frame_layout_album_select"
             xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/MatchMatch"
             android:paddingBottom="1.0dip"
             android:paddingLeft="1.0dip"
             android:paddingRight="1.0dip"
             android:paddingTop="1.0dip">

    <ImageView
        android:id="@+id/image_view_album_image"
        style="@style/MatchMatch"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_view_album_name"
        style="@style/MatchWrap"
        android:layout_gravity="bottom"
        android:background="@color/multiple_image_select_albumTextBackground"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/multiple_image_select_primaryText"
        android:textSize="20.0dip"/>
</FrameLayout>