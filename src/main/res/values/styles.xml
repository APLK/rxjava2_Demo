<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- App Theme Launch -->
    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">@color/dark_red</item>
    </style>

    <!--避免第一次进来白屏或黑屏-->
    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:listDivider">@color/divide</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/ac_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ac_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ac_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/ac_right_out</item>
    </style>

    <style name="main_footer_bar_radio" parent="@style/footer_bar">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">@color/white</item>
    </style>

    <style name="footer_bar">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="image_card_promote">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/width_70dp</item>
        <item name="android:layout_height">@dimen/width_70dp</item>
        <item name="android:layout_marginTop">@dimen/height_5dp</item>
        <item name="android:layout_marginBottom">@dimen/height_5dp</item>
    </style>

    <style name="image_home_promote">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/width_35dp</item>
        <item name="android:layout_height">@dimen/width_35dp</item>
        <item name="android:layout_marginTop">@dimen/height_10dp</item>
        <item name="android:layout_marginBottom">@dimen/height_5dp</item>
    </style>

    <style name="text_home_promote">
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/height_5dp</item>
    </style>
    <!-- 自定义加载圈 dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowContentOverlay">@null</item>
    </style>


